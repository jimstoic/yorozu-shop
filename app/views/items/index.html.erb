<h1><%= Item.model_name.human %></h1>

<div class="text-right">
  <%= link_to '追加', new_item_path, class: 'btn btn-primary' %>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= Item.human_attribute_name :name %></th>
        <th><%= Item.human_attribute_name :price %></th>
        <th><%= Item.human_attribute_name :stock %></th>
        <th><%= Item.human_attribute_name :note %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.stock %></td>
          <td><%= item.note %></td>
          <td><%= link_to '表示', item, class: 'btn btn-default' %></td>
          <td><%= link_to '編集', edit_item_path(item), class: 'btn btn-default' %></td>
          <td><%= link_to '削除', item, method: :delete, data: { confirm: '削除するの？' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
