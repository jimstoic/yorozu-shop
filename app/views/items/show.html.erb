<p id="notice"><%= notice %></p>

<div class="form-group">
  <label>Name:</label>
  <p class="form-control-static">
    <%= @item.name %>
  </p>
</div>

<div class="form-group">
  <label>Price:</label>
  <p class="form-control-static">
    <%= @item.price %>
  </p>
</div>

